<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3 mb-3">
            <h3>Edit your listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
    
                <div class="mb-3">
                    <lable name="listing[title]" class="form-label">Title: </lable>
                    <input type="text" name="listing[title]" id="title" class="form-control" value="<%= listing.title %>" placeholder="Enter your title"
                        required> </input>

                    <div class="invalid-feedback">
                        Please enter title
                    </div>
                </div>
    
                <div class="mb-3">
                    <lable name="listing[description]" class="form-label">Description: </lable>
                    <textarea type="text" name="listing[description]" id="description" class="form-control"
                        required> <%= listing.description %> </textarea>
                    
                    <div class="invalid-feedback">
                        Please enter a short description
                    </div>
                </div>

                <div class="mb-3">
                    Original Listing:
                    <br>
                    <img src="<%= originalImageUrl %>">
                </div>
    
                <div class="mb-3">
                    <lable name="listing[image]" class="form-label">Image: </lable>
                    <input type="file" name="listing[image]" id="image" class="form-control">
                    </input>
                </div>
    
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable name="listing[price]" class="form-label">Price: </lable>
                        <input type="number" name="listing[price]" id="price" value="<%= listing.price %>" class="form-control" placeholder="1200"
                            required>
                        </input>

                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>
    
                    <div class="mb-3 col-md-8">
                        <lable name="listing[location]" class="form-label">Location: </lable>
                        <input type="text" name="listing[location]" id="location" value="<%= listing.location %>" class="form-control"
                            placeholder="Pune, Delhi..." required>
                        </input>

                        <div class="invalid-feedback">
                            Location should be valid
                        </div>
                    </div>
                </div>
    
                <div class="mb-3">
                    <lable name="listing[country]" class="form-label">Country: </lable>
                    <input type="text" name="listing[country]" id="country" value="<%= listing.country %>" class="form-control" placeholder="India"
                        required>
                    </input>

                    <div class="invalid-feedback">
                        Country name should be valid
                    </div>
                </div>
    
                <button type="submit" class="btn btn-dark add"> Edit </button>
            </form>
        </div>
    </div>
</body>

