<% layout('/layouts/boilerplate.ejs') %>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3 mb-3">
            <h3>Create a new listing</h3>
            <form method="POST" action="/" novalidate class="needs-validation" enctype="multipart/form-data">
            
                <div class="mb-3">
                    <lable name="listing[title]" class="form-label">Title: </lable>
                    <input type="text" name="listing[title]" id="title" class="form-control" placeholder="Enter your title"
                        required> </input>

                    <div class="invalid-feedback">
                        Please enter title
                    </div>
                </div>
            
                <div class="mb-3">
                    <lable name="listing[description]" class="form-label">Description: </lable>
                    <textarea class="form-control" name="listing[description]" required></textarea>
                
                    <div class="invalid-feedback">
                        Please enter a short description
                    </div>
                </div>

                <div class="mb-3">
                    <lable name="listing[image]" class="form-label">Upload Listing Image: </lable>
                    <input type="file" name="listing[image]" id="image" class="form-control"> </input>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable name="listing[price]" class="form-label">Price: </lable>
                        <input  name="listing[price]" id="price" class="form-control" placeholder="1200" required>
                        </input>

                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <lable name="listing[location]" class="form-label">Location: </lable>
                        <input type="text" name="listing[location]" id="location" class="form-control" placeholder="Pune, Delhi..." required>
                        </input>

                        <div class="invalid-feedback">
                            Location should be valid
                        </div>
                    </div>
                </div>
            
                <div class="mb-3">
                    <lable name="listing[country]" class="form-label">Country: </lable>
                    <input type="text" name="listing[country]" id="country" class="form-control" placeholder="India" required>
                    </input>

                    <div class="invalid-feedback">
                        Country name should be valid
                    </div>
                </div>
            
                <button type="submit" class="btn btn-dark add"> Add </button>
            </form>
        </div>
    </div>
</body>
