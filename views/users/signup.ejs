<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">Signup on <i class="fa-brands fa-vimeo-v"></i>istaBnB</h2>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate >

            <div class="mb-3">
                <lable for="username" class="form-label">Username: </lable>
                <input type="text" name="username" id="username" class="form-control" placeholder="Enter your username" required>
                </input>
            
                <div class="invalid-feedback">
                    Please enter Username!
                </div>

                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mb-3">
                <lable for="email" class="form-label">email: </lable>
                <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required>
                </input>
            </div>

            <div class="mb-3">
                <lable for="password" class="form-label">password: </lable>
                <input type="password" name="password" id="password" class="form-control" placeholder="Enter your username" required>
                </input>
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>
